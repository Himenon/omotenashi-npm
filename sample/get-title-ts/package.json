{
  "name": "get-title-ts",
  "version": "1.0.0",
  "description": "URLを入力するとサイトタイトルを取得するCLI",
  "main": "./lib/main.js",
  "typing": "./lib/main.d.ts",
  "scripts": {
    "start": "run-p watch:*",
    "cli": "node ./bin/cli.js https://github.com",
    "test": "jest -c ./jest.config.json --detectOpenHandles",
    "prebuild": "yarn run clean",
    "build": "tsc -p tsconfig.build.json",
    "watch:test": "yarn run test -- --watch",
    "watch:build": "yarn run build -- --watch",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "yarn run lint -- --fix",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "clean": "rimraf lib",
    "format": "yarn run prettier && yarn run lint:fix",
    "prettier": "prettier --write src/**/*.ts src/**/*.tsx"
  },
  "keywords": [
    "cli"
  ],
  "author": "Himenon",
  "license": "MIT",
  "bin": {
    "get-title": "./lib/cli.js"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.4",
    "@types/puppeteer": "^1.9.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "puppeteer": "^1.9.0"
  },
  "engines": {
    "node": "<=9.8.0",
    "npm": "<=6.4"
  },
  "directories": {
    "lib": "lib",
    "example": "sample"
  },
  "files": [
    "README.md",
    "lib",
    "./package.json",
    "LICENSE"
  ]
}

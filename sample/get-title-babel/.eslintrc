{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "indent": ["error", 2],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    }
}